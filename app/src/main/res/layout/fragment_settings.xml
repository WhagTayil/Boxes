<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_settings_num" />

        <TextView
            android:id="@+id/textViewNumBoxes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="@string/text_settings_num_boxes" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewQ1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="64dp"
        android:text="@string/text_settings_Q1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonQ1p"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="@string/text_settings_increment"
        app:layout_constraintBottom_toTopOf="@+id/imageViewSettingsQ1"
        app:layout_constraintEnd_toEndOf="@+id/imageViewSettingsQ1"
        app:layout_constraintStart_toStartOf="@+id/imageViewSettingsQ1" />

    <ImageView
        android:id="@+id/imageViewSettingsQ1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_looks_one_black_48dp_2tone"
        app:layout_constraintBottom_toBottomOf="@+id/textViewQ1"
        app:layout_constraintStart_toEndOf="@+id/textViewQ1"
        app:layout_constraintTop_toTopOf="@+id/textViewQ1"
        app:tint="@color/colorPrimary" />

    <Button
        android:id="@+id/buttonQ1m"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="@string/text_settings_decrement"
        app:layout_constraintEnd_toEndOf="@+id/imageViewSettingsQ1"
        app:layout_constraintStart_toStartOf="@+id/imageViewSettingsQ1"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSettingsQ1" />





    <TextView
        android:id="@+id/textViewQ2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="64dp"
        android:text="@string/text_settings_Q2"
        app:layout_constraintStart_toEndOf="@id/imageViewSettingsQ1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonQ2p"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="@string/text_settings_increment"
        app:layout_constraintBottom_toTopOf="@+id/imageViewSettingsQ2"
        app:layout_constraintEnd_toEndOf="@+id/imageViewSettingsQ2"
        app:layout_constraintStart_toStartOf="@+id/imageViewSettingsQ2" />

    <ImageView
        android:id="@+id/imageViewSettingsQ2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_looks_two_black_48dp_2tone"
        app:layout_constraintBottom_toBottomOf="@+id/textViewQ2"
        app:layout_constraintStart_toEndOf="@+id/textViewQ2"
        app:layout_constraintTop_toTopOf="@+id/textViewQ2"
        app:tint="@color/colorPrimary" />

    <Button
        android:id="@+id/buttonQ2m"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="@string/text_settings_decrement"
        app:layout_constraintEnd_toEndOf="@+id/imageViewSettingsQ2"
        app:layout_constraintStart_toStartOf="@+id/imageViewSettingsQ2"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSettingsQ2" />













</androidx.constraintlayout.widget.ConstraintLayout>